<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="475dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/txtclose"
        android:layout_gravity="end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/presence_offline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/municiple"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\nThe Kenyan Municiples are Devolved as the County Governments are in Kenya. Each County has its own Rules and Regulations on how they Conduct their Duties. \n\n                CASES TO BE REPORTED ARE:\n\n -In case of Iappropriate Littering of Waste Especially in Urban Areas \n-In case the County Council Duty Members are not Carrying their duties as they are Supposed to and e.t.c "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</LinearLayout>