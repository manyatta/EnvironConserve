<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.manyatta.environconserve.reset">


    <TextView
        android:id="@+id/textView"
        style="@style/textView_style"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"

        android:textColor="#D4FFFF"
        android:text="Reset password here...!"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextPassword" />
    <EditText
        style="@style/editText_style"
        android:id="@+id/editTextUsername"
        android:hint="Enter username"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp" />

    <EditText
        style="@style/editText_style"
        android:id="@+id/editTextPassword"
        android:hint="Enter new password"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789-,."
        android:inputType="textPassword"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="14dp" />

    <EditText
        style="@style/editText_style"
        android:id="@+id/editTextCPassword"
        android:hint="Confirm Password"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789-,."
        android:inputType="textPassword"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="14dp" />

    <Button
        style="@style/button_style"
        android:id="@+id/user_reset"
        android:text="Reset"
        android:onClick="userReset"
        android:layout_below="@+id/editTextCPassword"
        android:layout_marginTop="39dp"
        android:layout_alignParentStart="true" />


</RelativeLayout>
