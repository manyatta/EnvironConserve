<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.manyatta.environconserve.NSendMap">


    <TextView
        android:id="@+id/tv_UserLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView10"
        style="@style/textView_style"
        android:text="LATITUDE"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/tv_UserLast"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewLat"
        style="@style/textView_style"
        android:layout_below="@+id/textView10" />

    <TextView
        android:id="@+id/textView13"
        style="@style/textView_style"
        android:text="LONGITUDE"
        android:layout_below="@+id/textViewLat"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/textViewLong"
        style="@style/textView_style"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="45dp" />

    <EditText
        android:id="@+id/editTextActivity"
        style="@style/editText_style"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Activity"
        android:layout_below="@+id/textViewLong"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />


    <Button
        android:id="@+id/NSendMap"
        style="@style/button_style"
        android:text="SEND MAP"
        android:onClick="SendData"
        android:layout_below="@+id/editTextActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>
